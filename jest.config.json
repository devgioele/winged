{
  "roots": ["<rootDir>/__tests__", "<rootDir>/src"],
  "clearMocks": true,
  "moduleFileExtensions": ["js", "ts"],
  "testMatch": [
    "**/__tests__/**/*.(spec|test).[jt]s?(x)",
    "**/?(*.)+(spec|test).[jt]s?(x)"
  ],
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  }
}
